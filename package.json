{
  "name": "auto-fgtool",
  "displayName": "Auto FGTool",
  "description": "This extension creates a new file/folder in the workspace",
  "version": "0.0.2",
  "icon": "icon.png",
	"license": "MIT",
	"publisher": "danielchu",
	"author": "DanielChu",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoFGTool.createNewFolder",
        "title": "Create New Folder"
      },
      {
        "command": "autoFGTool.generateServicesModule",
        "title": "1. Generate Services Module"
      },
      {
        "command": "autoFGTool.generateDefaultFile",
        "title": "2. Generate Default File"
      },
      {
        "command": "autoFGTool.generateQueriesFile",
        "title": "3. Generate Queries File"
      },
      {
        "command": "autoFGTool.generateServicesFile",
        "title": "4. Generate Services File"
      },
      {
        "command": "autoFGTool.generateTypesFile",
        "title": "5. Generate Types File"
      },
      {
        "command": "autoFGTool.generateModelFile",
        "title": "6. Generate Model File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "agf-tool-menus",
          "when": "explorerResourceIsFolder",
          "group": "agf_workspace"
        }
      ],
      "agf-tool-menus": [
        {
          "command": "autoFGTool.generateServicesModule",
          "when": "explorerResourceIsFolder ",
          "group": "agf_workspace"
        },
        {
          "command": "autoFGTool.generateDefaultFile",
          "when": "explorerResourceIsFolder ",
          "group": "agf_workspace"
        },
        {
          "command": "autoFGTool.generateQueriesFile",
          "when": "explorerResourceIsFolder ",
          "group": "agf_workspace"
        },
        {
          "command": "autoFGTool.generateServicesFile",
          "when": "explorerResourceIsFolder ",
          "group": "agf_workspace"
        },
        {
          "command": "autoFGTool.generateTypesFile",
          "when": "explorerResourceIsFolder ",
          "group": "agf_workspace"
        },
        {
          "command": "autoFGTool.generateModelFile",
          "when": "explorerResourceIsFolder ",
          "group": "agf_workspace"
        }
      ]
    },
    "submenus": [
      {
        "id": "agf-tool-menus",
        "label": "Auto GFTool"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
